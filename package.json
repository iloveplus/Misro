{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "rm -rf pnpm-lock.yaml node_modules ./packages/*/node_modules ./packages/*/dist",
    "dev": "turbo run dev",
    "docs:start": "dumi dev",
    "docs:build": "dumi build && cp CNAME docs-dist",
    "docs:deploy": "gh-pages -d docs-dist",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "@umijs/fabric": "^2.8.1",
    "antd": "^4.22.4",
    "babel-plugin-import": "^1.13.5",
    "dumi": "^1.1.47",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "turbo": "^1.4.2",
    "webpack": "^5.74.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "'repository'": {
    "type": "git",
    "url": "git+https://github.com/iloveplus/misco.git"
  },
  "author": "xuhang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iloveplus/misco/issues"
  },
  "homepage": "https://github.com/iloveplus/misco#readme"
}
